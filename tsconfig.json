{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "baseUrl": ".",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext"
  },
  "exclude": [
    "node_modules",
    "metro.config.js"
  ],
  "include": [
    "src"
  ]
}
